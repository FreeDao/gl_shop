<?xml version="1.0" encoding="utf-8"?>
<!-- 对方资料中评价信息Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_company_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/buy_item_padding" >

    <!-- 企业评价信息 -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="企业评价信息" />

        <Button
            android:id="@+id/btn_view_evaluation"
            style="@style/button_small_orange"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="查看评价" />
    </RelativeLayout>

    <!-- 成功交易笔数 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buy_item_height"
        android:background="@drawable/selector_item_top"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/buy_item_padding"
        android:paddingRight="@dimen/buy_item_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="成功交易笔数" />

        <TextView
            android:id="@+id/tv_trade_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="6"
            android:textColor="@color/blue" />
    </LinearLayout>

    <View style="@style/item_devider_line" />

    <!-- 交易成功率 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buy_item_height"
        android:background="@drawable/selector_item_middle"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/buy_item_padding"
        android:paddingRight="@dimen/buy_item_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="交易成功率" />

        <TextView
            android:id="@+id/tv_turnover_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="95%"
            android:textColor="@color/blue" />
    </LinearLayout>

    <View style="@style/item_devider_line" />

    <!-- 交易满意度 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buy_item_height"
        android:background="@drawable/selector_item_middle"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/buy_item_padding"
        android:paddingRight="@dimen/buy_item_padding" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="交易满意度" />

        <RatingBar
            android:id="@+id/rb_satisfaction"
            style="@style/Contract_RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="2.5" />
    </LinearLayout>

    <View style="@style/item_devider_line" />

    <!-- 交易诚信度 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buy_item_height"
        android:background="@drawable/selector_item_bottom"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/buy_item_padding"
        android:paddingRight="@dimen/buy_item_padding" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="交易诚信度" />

        <RatingBar
            android:id="@+id/rb_credit"
            style="@style/Contract_RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4" />
    </LinearLayout>

</LinearLayout>