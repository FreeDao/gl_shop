<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/layout_load_data_status" />

    <LinearLayout
        android:id="@+id/ll_contract_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical"
        android:padding="@dimen/buy_item_padding" >

        <!-- 合同名称 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_item_top"
            android:gravity="center_vertical"
            android:padding="@dimen/buy_item_padding" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_contract_info"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/buy_item_padding"
                android:text="合同名称："
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_contract_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="购买黄砂X吨"
                android:textColor="@color/blue" />
        </LinearLayout>

        <!-- 甲方 -->

        <View style="@style/item_devider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_item_middle"
            android:gravity="center_vertical"
            android:padding="@dimen/buy_item_padding" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_contact"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/buy_item_padding"
                android:text="甲方："
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_contract_first_party"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="某某某"
                android:textColor="@color/blue" />
        </LinearLayout>

        <!-- 乙方 -->

        <View style="@style/item_devider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_item_middle"
            android:gravity="center_vertical"
            android:padding="@dimen/buy_item_padding" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_contact"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/buy_item_padding"
                android:text="乙方："
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_contract_second_party"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="XX公司"
                android:textColor="@color/blue" />
        </LinearLayout>

        <!-- 详细内容 -->

        <View style="@style/item_devider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_item_bottom"
            android:gravity="center_vertical"
            android:padding="@dimen/buy_item_padding" >

            <WebView
                android:id="@+id/wv_contract_detail_model"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>